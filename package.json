{
  "name": "youtube-research-hub",
  "version": "2.0.0",
  "description": "Professional YouTube Channel Analytics & Research Tool",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 4173",
    "test": "node src/js/integration-test.js",
    "test:design": "node test-design.js",
    "test:all": "npm run test && npm run test:design",
    "performance": "npx lighthouse http://localhost:4173 --only-categories=performance --quiet",
    "bundle-size": "npx bundlesize",
    "security-audit": "npm audit --audit-level moderate",
    "deploy": "npm run build && npm run test:all && echo 'Ready for deployment'",
    "deploy:gh-pages": "npm run build && gh-pages -d dist",
    "clean": "rm -rf dist node_modules/.vite",
    "validate": "npm run build && npm run preview"
  },
  "keywords": [
    "youtube",
    "analytics",
    "research",
    "content-analysis",
    "video-statistics"
  ],
  "author": "YouTube Research Hub Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/youtube-research-hub.git"
  },
  "bugs": {
    "url": "https://github.com/user/youtube-research-hub/issues"
  },
  "homepage": "https://github.com/user/youtube-research-hub",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "vite": "^6.3.5",
    "gh-pages": "^6.1.1",
    "bundlesize": "^0.18.2",
    "lighthouse": "^12.0.0"
  },
  "bundlesize": [
    {
      "path": "./dist/assets/*.js",
      "maxSize": "500 kB",
      "compression": "gzip"
    },
    {
      "path": "./dist/assets/*.css",
      "maxSize": "50 kB",
      "compression": "gzip"
    }
  ],
  "files": [
    "test-server.js",
    "youtube_video_exporter.html",
    "config.template",
    "README.md",
    "docs/"
  ]
}
